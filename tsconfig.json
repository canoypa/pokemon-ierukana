{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2017", "WebWorker"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "jsx": "preserve",
    "jsxFactory": "h",
    "sourceMap": true,

    "typeRoots": ["node_modules/@types", "src/@types"]
  }
}
